# This is a example .env file for use in local development.
# Duplicate this file as .env in the root of the project and update the environment variables to match your desired config

# The HTTP port to run the application on
PORT=4000

# MongoDB connection string (example placeholder, not a real URI)
MONGO_URI=YOUR_MONGODB_ATLAS_URI_HERE

# JWT secret and expiry (example placeholder)
JWT_SECRET=YOUR_JWT_SECRET_HERE
JWT_EXPIRE=7d

# Cookie expiry
COOKIE_EXPIRE=5

# Stripe API Key & Secret Key (Optional) **Alternative Paytm**
STRIPE_API_KEY=YOUR_STRIPE_API_KEY_HERE
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY_HERE

# Any SMTP Credentials (Optional) **Alternative Sendgrid**
SMTP_HOST=YOUR_SMTP_HOST_HERE
SMTP_PORT=465
SMTP_SERVICE=YOUR_SMTP_SERVICE_HERE
SMTP_MAIL=you@example.com
SMTP_PASSWORD=YOUR_SMTP_PASSWORD_HERE

# Sendgrid Credentials
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE
SENDGRID_MAIL=you@example.com
SENDGRID_RESET_TEMPLATEID=your_reset_template_id_here
SENDGRID_ORDER_TEMPLATEID=your_order_template_id_here

# Cloudinary Credentials
CLOUDINARY_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Paytm Credentials
PAYTM_MID=your_paytm_mid_here
PAYTM_MERCHANT_KEY=your_paytm_merchant_key_here
PAYTM_WEBSITE=WEBSTAGING
PAYTM_CHANNEL_ID=WEB
PAYTM_INDUSTRY_TYPE=Retail
PAYTM_CUST_ID=your_paytm_customer_id_here

# The environment to run the application in
NODE_ENV=development